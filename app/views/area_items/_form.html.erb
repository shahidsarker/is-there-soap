<!--      <label class="form-check-label" for="exampleRadios2">-->
<!--        Second default radio-->
<!--      </label>-->
    </div>
    <div class="form-check">
      <%= form.radio_button(:status, 0.0, {:class=>'form-check-input'}) %>
      <%= form.label(:status, "Empty",{:class=>'form-check-label'}) %>
