<%= form_with(model: area_item, local: true) do |form| %>
  <% if area_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(area_item.errors.count, "error") %> prohibited this area_item from being saved:</h2>

      <ul>
        <% area_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field form-group">
    <%= form.label :item %>
    <%= form.collection_select(:item_id,Item.all,:id,:name, {}, {:class => 'form-control' }) %>
  </div>

  <div class="field form-group">
    <%= form.label :area %>
